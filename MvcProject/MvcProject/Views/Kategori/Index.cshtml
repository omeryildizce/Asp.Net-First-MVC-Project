@using MvcProject.Models.Entity
@using PagedList
@using PagedList.Mvc
@*@model List<Kategoriler>*@
@model PagedList.IPagedList<Kategoriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    <tbody>
        @foreach (var kategori in Model)
        {
            <tr>
                <th>@kategori.KategoriId</th>
                <td>@kategori.KategoriAd</td>

                <td><a href="/Kategori/Delete/@kategori.KategoriId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Kategori/Update/@kategori.KategoriId" class="btn btn-success">Güncelle</a></td>
                
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index", new {sayfa}))
<a href="/Kategori/Add/" class="btn btn-primary">Yeni Kategori Ekle</a>